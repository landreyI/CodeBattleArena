@model IFormFile

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Upload Photo</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="AddPhotoAvatar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="photoInput" class="form-label">Select Photo</label>
                            <input type="file" name="Photo" class="form-control" id="photoInput" accept="image/*" required />
                            <small class="form-text text-muted">Choose a photo file to upload.</small>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

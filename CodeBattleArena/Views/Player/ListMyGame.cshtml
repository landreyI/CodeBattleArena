@model List<SessionModel>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Sessions</h5>
                    <div class="list-group">
                        @foreach (var session in Model)
                        {
                            <a asp-controller="Session" asp-action="InfoSession" asp-route-sessionId="@session.IdSession" class="btn btn-success mb-2 list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span>@session.Name</span>
                                <span>Difficulty: @session.Difficulty</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
